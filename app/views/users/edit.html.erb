<div class="container">
  <div class="row">
    <div class="mx-auto">
    <h1>User info</h1>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved：
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="mx-auto">
      <%= form_with model:@user, local:true do |f| %>
        <label for="inputName">Name</label>
        <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
        <p><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></p>
        <label for="inputImage">Image</label>
        <p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>
        <label for="inputintroduction">introduction</label>
        <p><%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介"%></p>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>